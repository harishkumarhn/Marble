@model Marbale.BusinessObject.SiteSetup.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <link href="~/Assets/Css/bootstrap4.1.3.min.css" rel="stylesheet" />

     <link href="~/Assets/font-awesome.4.7.0/font-awesome.min.css" rel="stylesheet" /> 
  
    <link href="~/Assets/Css/BaseFonts.css" rel="stylesheet" />
    <link href="~/Assets/Css/BaseStyle01.css" rel="stylesheet" />
    <link href="~/Assets/Css/BaseStyle02.css" rel="stylesheet" />

    <!-- Bootstrap CSS CDN -->
 
    <!-- Our Custom CSS -->
 

    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Content/JS/bootstrap.min.js"></script>*@

    @*<script src="~/Content/JS/popper.min.js"></script>
    <script defer src="~/Content/JS/fontawesome.solid.js"></script>
    <script defer src="~/Content/JS/fontawesome.js"></script>*@

    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>

    <div class="wrapper">

        <!-- Page Content  -->
        <div id="Content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div>
                            @using (Ajax.BeginForm("Login", "Marble", FormMethod.Post, new AjaxOptions { OnSuccess = "displayMessage" }))
                            {
                                <fieldset>
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    @if (@ViewBag.Message != null)
                                    {
                                        <div style="color: red">
                                            @ViewBag.Message
                                        </div>
                                    }
                                    @Html.HiddenFor(model => model.Name,
                                            new { id = "Name", Value = "marbale" })
                                    <label>UserId</label>
                                    @Html.TextBoxFor(a => a.LoginId)

                                    <label>Password</label>
                                    @Html.TextBoxFor(a => a.Password, new { Type = "password" })

                                    <button class="btn btn-primary btn-md" style="margin-left: 20px" role="button" type="submit">Login</button>
                                </fieldset>
                            }
                        </div>

                    </div>
                </div>
            </nav>
        </div>
        <img src="~/Assets/Images/marbleHome.jpeg" alt="Marble" class="center">
      
    </div>
    <script type="text/javascript">
        function displayMessage(response) {
            $('#message').innerHTML = response;
        }
    </script>

</body>
</html>
