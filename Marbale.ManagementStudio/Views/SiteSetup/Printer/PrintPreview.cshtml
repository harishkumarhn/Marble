@{
    ViewBag.Title = "Print";
    Layout = null;
}
<div class="modal-header">
    <h4 class="modal-title">Preview</h4>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="min-width: 10px !important;">&times;</button>
</div>
<div class="modal-body" style="background-color:silver;">
    <div style="background-color:white;width: 50%;margin:0 auto;">
        <div style="overflow-y: auto;height: 420px;">
            @{
                @Html.Raw(ViewBag.printHTML)
            }
        </div>       
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-primary btn-md" role="button" onclick="Print()">Print</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
